@using Drinks.AuthModule.ViewModels
@model LoginViewModel

<section class="vh-100" style="background-color: transparent;">
	<div class="container h-100" style="margin-top: -100px;">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-lg-12 col-xl-11">
				<div class="row justify-content-center">
					<div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

						<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-5">Вход</p>

						@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "mx-1 mx-md-4", role = "form" }))
						{
							@Html.AntiForgeryToken()
							@Html.ValidationSummary("", new { @class = "text-danger" })

							<div class="d-flex flex-row align-items-center mb-2">
								<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
								<div class="form-outline flex-fill mb-0">
									@Html.TextBoxFor(m => m.Email, new
										{
											@class = "form-control",
											data_mdb_input_init = "",
											placeholder = "Email",
											autocomplete = "off"
										})
								</div>
							</div>

							<div class="d-flex flex-row align-items-center mb-2">
								<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
								<div class="form-outline flex-fill mb-0">
									@Html.PasswordFor(m => m.Password, new
										{
											@class = "form-control",
											data_mdb_input_init = "",
											placeholder = "Пороль",
											autocomplete = "off"
										})
								</div>
							</div>

							<div class="form-check" style="margin-left: 40px;">
								@Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", id = "RememberMe" })
								<label class="form-check-label" for="RememberMe">Запомнить меня?</label>
							</div>

							<div style="margin-bottom: 20px;"></div>

							<div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
								<input type="submit" class="btn btn-primary btn-lg" value="Войти" />
							</div>
						}
					</div>
					<div class="col-md-9 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
						<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
							 class="img-fluid" alt="Sample image">
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
