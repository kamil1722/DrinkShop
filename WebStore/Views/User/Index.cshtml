@model IEnumerable<WebStore.Models.Drinks>

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css"> <!-- Подключение CSS файла -->
    <link rel="stylesheet" href="~/css/user.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/siteUser.js" asp-append-version="true"></script>
</head>

<body>

    <p>
        <div id="cardsContainer">
            @await Html.PartialAsync("Cards", Model)
        </div>
    </p>
 
    <p>
        <div>
            @await Html.PartialAsync("Buttons", Model)
        </div>
    </p>
    
    <p>
        <div style="border-width: thin; width: 100%; position: absolute; top: 70px; left: -10px; text-align: right;">
            <img src="~/Resource/free-icon-ruble.png" width="32" height="32" title="Баланс"> <b id="balance" title="Баланс"></b><br><br>
        </div>
    </p>
</body>
</html>